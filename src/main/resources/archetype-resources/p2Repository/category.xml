#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<site>
   <description name="${pluginName} P2 Repository" url="${p2RepositoryLocation}">
      ${pluginName} P2 Repository
   </description>
   <feature url="features/${rootArtifactId}.feature_${version}.qualifier.jar" id="${rootArtifactId}.feature" version="${version}.qualifier">
      <category name="${rootArtifactId}_category"/>
   </feature>
   <feature url="features/${rootArtifactId}.source.feature_${version}.qualifier.jar" id="${rootArtifactId}.source.feature" version="${version}.qualifier">
      <category name="${rootArtifactId}_category"/>
   </feature>
   <category-def name="${rootArtifactId}_category" label="${pluginCategory}">
      <description>
         ${pluginCategory}
      </description>
   </category-def>
</site>
